{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        // "module": "amd",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "lib",
        // "outFile": "build/tsc.js",
        "lib": ["ES2022", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}